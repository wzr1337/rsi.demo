{
  "name": "rsi.demo",
  "version": "0.2.0",
  "description": "A demo application that spins up an rsi server.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "watch": {
    "serve": {
      "patterns": [
        "src"
      ],
      "extensions": "ts",
      "quiet": false
    }
  },
  "scripts": {
    "test": "npm run build:prod && jasmine --config=./jasmine.json",
    "build": "npm run build:dev",
    "build:dev": "tsc",
    "build:prod": "tslint -p ./tsconfig.json && tsc",
    "watch": "npm-watch",
    "start": "node dist/index.js --port 3000",
    "serve": "npm run build && node dist/index.js"
  },
  "author": "Dr. Patrick Bartsch",
  "license": "MIT",
  "dependencies": {
    "@rsi-plugins/gardening": "https://github.com/wzr1337/rsi-plugins.gardening.git#0.2.1",
    "@rsi-plugins/media": "https://github.com/wzr1337/rsi-plugins.media#0.2.5",
    "@rsi/cdn": "https://github.com/wzr1337/rsi.cdn#0.2.6",
    "@rsi/server": "https://github.com/wzr1337/rsi.server#0.2.3",
    "@rsi/serviceregistry": "https://github.com/wzr1337/rsi.serviceregistry.git#feature/tslint",
    "@types/winston": "^2.3.9",
    "command-line-args": "^3.0.5",
    "npm-watch": "^0.3.0"
  },
  "devDependencies": {
    "@types/jasmine": "^2.8.6",
    "@types/node": "^9.3.0",
    "jasmine": "^3.0.0",
    "request": "^2.83.0",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  }
}
